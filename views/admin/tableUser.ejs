<div>
    <div>
        <button type="button" class="btn btn-primary" data-target="#loginFrom" data-toggle="modal">tạo mới người dùng</button>
        <div class="modal fade" id="loginFrom" %> tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">tạo mới người dùng </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" method="post" action=<%=url+"/users/register" %>>
                            <div class="form-group">
                                <label for="email" class="cols-sm-2 control-label">email</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope fa"
                                                aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="email" id="email"
                                            placeholder="Enter your Email" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="username" class="cols-sm-2 control-label">tên tài khoản</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-users fa"
                                                aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="username" id="username"
                                            placeholder="Enter your Username" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label">số điện thoại</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa"
                                                aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="phone" id="phone"
                                            placeholder="Enter your Phone" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="cols-sm-2 control-label">mật khẩu</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg"
                                                aria-hidden="true"></i></span>
                                        <input type="password" class="form-control" name="password" id="password"
                                            placeholder="Enter your Password" />
                                    </div>
                                </div>
                            </div>
                            <input type="radio" name="role" value="customer"> khách hàng <br>
                            <input type="radio" name="role" value="tourguide"> hướng dẫn viên<br>
                            <div class="form-group ">
                                <button type="submit"
                                    class="btn btn-primary btn-lg btn-block login-button">đăng ký</button>
                            </div>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">_id</th>
                <th scope="col">tên tài khoản</th>
                <th scope="col">số điện thoại</th>
                <th scope="col">quyền </th>
                <th scope="col">email</th>
            </tr>
        </thead>
        <tbody>
            <% user.forEach(function(userdetail){ %>
            <tr>
                <th><%= userdetail._id; %></th>
                <th><%= userdetail.username; %></th>
                <th><%= userdetail.phone; %></th>
                <th><%= userdetail.role; %></th>
                <th><%= userdetail.email; %></th>
                <th>
                    <button type="button" class="btn btn-primary" data-target=<%="#"+userdetail.username; %>
                        data-toggle="modal">xem chi tiết</button>
                    <div class="modal fade" id=<%=userdetail.username; %> tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">chi tiết người dùng</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form action=<%= url + '/users/home/qluser'; %> method="post">
                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="form14" class="">tên tài khoản</label>
                                            <input type="username" name="username" value=<%= userdetail.username; %>
                                                class="form-control form-control-sm">
                                        </div>

                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="form5">email</label>
                                            <input type="email" name="email" value=<%=userdetail.email %>
                                                class="form-control form-control-sm">
                                        </div>
                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="form5">số điện thoại</label>
                                            <input type="number" name="phone" value=<%=userdetail.phone; %>
                                                class="form-control form-control-sm">
                                        </div>
                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="form5">sinh nhật</label>
                                            <input type="date" name="birthDay" value=<%=userdetail.birthday; %>
                                                class="form-control form-control-sm">
                                        </div>
                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <label for="form6">mật khẩu cần cập nhật</label>
                                            <input type="text" name="password" class="form-control form-control-sm">
                                        </div>
                                        <div>
                                            <i class="fas fa-lock prefix"></i>
                                            <input type="hidden" name="_id" value=<%=userdetail._id %>
                                                class="form-control form-control-sm">
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-info waves-effect waves-light">cập nhật
                                                <i class="fas fa-sign-in ml-1"></i>
                                            </button>
                                        </div>
                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </th>
                <th>
                    <form action=<%= url + '/users/home/qluser'; %> method="post">
                        <div>
                            <input type="hidden" name="isDelete" value="true">
                            <input type="hidden" name="_id" value=<%=userdetail._id %>>
                            <input type="hidden" name="role" value=<%=userdetail.role %>>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary"> Xóa </button>
                        </div>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#haha').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)

            })
        });
    </script>